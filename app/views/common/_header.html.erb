<!-- header -->
<nav class="main-navibar">
  <%= link_to main_path, class: 'logo-wrapper', :'data-no-turbolink' => true do %>
    <%= image_tag 'logo-white@2x.png' %>
  <% end %>

  <div class="main-menu">
    <ul>
      <li><%= link_to 'Subject', subjects_path %></li>
      <li><a href="#">Create New</a></li>
      <li class='user-menu-trigger'>
